{{!< default}}

<article class="panel" role="main">

    {{#author}}
        <div>

            {{#if profile_image}}
                <figure class="author-image-wrapper">
                    <div class="author-image" style="background-image: url({{profile_image}})"><span class="hidden">{{name}}'s Picture</span>
                    </div>
                </figure>
            {{/if}}

            <h1 class="page-title">{{name}}</h1>

            {{#if bio}}
                <p class="author-bio">{{bio}}</p>
            {{/if}}

            <div class="author-meta">

                {{#if location}}
                    <span class="author-meta-info">
                        <i class="fa fa-map-marker"></i>
                        {{location}}
                    </span>
                {{/if}}

                {{#if website}}
                    <span class="author-meta-info">
                        <i class="fa fa-link"></i>
                        <a href="{{website}}">{{website}}</a>
                    </span>
                {{/if}}

                {{#if twitter}}
                    <span class="author-meta-info">
                        <i class="fa fa-twitter"></i>
                        <a href="{{twitter_url}}">{{twitter}}</a>
                    </span>
                {{/if}}

                {{#if facebook}}
                    <span class="author-meta-info">
                        <i class="fa fa-facebook"></i>
                        <a href="{{facebook_url}}">{{facebook}}</a>
                    </span>
                {{/if}}

                <span class="author-meta-info">
                        <i class="fa fa-file-o"></i>
                    {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
                </span>

            </div>

        </div>
    {{/author}}

</article>

{{!-- The tag below includes the post loop - partials/loop.hbs --}}
{{> loop twoColumns=true}}
